<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Custom Fonts -->
    <key>UIAppFonts</key>
    <array>
        <string>waltographUI.ttf</string>
    </array>
    
    <!-- Firebase URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>GoogleSignIn</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>com.googleusercontent.apps.457077840315-r0l4pl26dhenqs2fke6htc46mi5245rj</string>
            </array>
        </dict>
    </array>
    
    <!-- Push Notifications Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
        <string>background-processing</string>
    </array>
    
    <!-- Push Notification Capabilities -->
    <key>aps-environment</key>
    <string>development</string>
    
    <!-- Required for iOS 15+ notification permissions -->
    <key>NSUserNotificationRequestAuthorizationBeforeDisplay</key>
    <true/>
    
    <!-- Firebase Cloud Messaging -->
    <key>FirebaseMessagingAutoInitEnabled</key>
    <true/>
    
    <!-- Privacy descriptions -->
    <key>NSUserNotificationsUsageDescription</key>
    <string>WDW Daydreams sends notifications when your partner writes a story or when it's your turn to write.</string>
</dict>
</plist>
